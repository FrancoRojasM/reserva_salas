        }

        .captha_numbers {
            text-align: center;
            margin-bottom: 2px;
        }

            .captha_numbers a {
                text-align:center;
                font-size:20px;
                border: 1px solid #0085CF;
                -webkit-border-radius: 6px;
                -moz-border-radius: 6px;
                border-radius: 6px;
                color: #0085CF;
                padding: 2px;
                text-decoration: none;
            }

                .captha_numbers a:hover {
                    background-color: #0085CF;
                    color: #ffffff;
                }

